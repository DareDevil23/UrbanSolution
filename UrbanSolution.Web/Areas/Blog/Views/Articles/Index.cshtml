@using UrbanSolution.Web.Models
@model UrbanSolution.Web.Areas.Blog.Models.ArticleListingViewModel
@{
    ViewData["Title"] = "Blog Articles";
    var pagesModel = new PagesModel
    {
        CurrentPage = Model.CurrentPage,
        NextPage = Model.NextPage,
        TotalPages = Model.TotalPages,
        PreviousPage = Model.PreviousPage
    };
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <ul class="list-group article-list">
            @foreach (var article in Model.Articles)   //TODO: display template
            {
                <li class="list-group-item">
                    <a asp-action="Details" asp-route-id="@article.Id" asp-route-title="@article.Title.ToFriendlyUrl()">@article.Title</a>
                    <br />
                    <small>published by @article.Author on @article.PublishDate.ToShortDateString()</small>
                </li>
            }
        </ul>
    </div>
</div>

@if (Model.TotalPages > Model.Articles.Count())
{
    @await Html.PartialAsync("~/Views/Shared/_PagingPartial.cshtml", pagesModel)
}