<div class="row">
    @foreach (var e in Model.Events)
    {
        <div class="col-md-5 col-md-offset-1 list-group-item">
            <a asp-action="Details" asp-route-id="@e.Id"
               asp-route-title="@e.Title.ToFriendlyUrl()">
                @e.Title
            </a>
            <br />
            <small>starting: @e.Starts.ToLongDateString()</small>
        </div>
    }
</div>

@*pagging*@

@if (Model.TotalPages > Model.Events.Count())
{
    @await Html.PartialAsync("~/Views/Shared/_PagingPartial.cshtml", pagesModel)
}