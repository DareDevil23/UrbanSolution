@using UrbanSolution.Web.Infrastructure.Extensions
@model UrbanSolution.Web.Areas.Events.Models.EventsListingViewModel
@{
    ViewData["Title"] = "All Events";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <ul class="list-group article-list">
            @foreach (var e in Model.Events)
            {
                <li class="list-group-item">
                    <a asp-action="Details" asp-route-id="@e.Id" asp-route-title="@e.Title.ToFriendlyUrl()">@e.Title</a>
                    <br />
                    <small>starting: @e.Starts.ToLongDateString()</small>
                </li>
            }
        </ul>
    </div>
</div>

@if (Model.TotalEvents > Model.Events.Count())
{
    <ul class="pagination">
        <li class="@(Model.CurrentPage == 1 ? "disabled" : string.Empty)">
            <a asp-route-page="@Model.PreviousPage" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        <li class="@(Model.CurrentPage == Model.TotalPages ? "disabled" : string.Empty)">
            <a asp-route-page="@Model.NextPage" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
}