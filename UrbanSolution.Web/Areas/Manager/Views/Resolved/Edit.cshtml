@model ResolvedIssueEditModel
@{
    ViewData["Title"] = "Edit resolved issue";
}

<div row class="text-info">
    <h3 class="text-center">@this.ViewData["Title"]</h3>
    <hr />
</div>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form asp-area="Manager" asp-controller="Resolved" asp-action="Edit" asp-route-id="@Model.Id" 
              method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <input asp-for="PictureFile" class="form-control" />

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" rows="8" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="row" style="text-align: center">
                <button type="submit" class="btn btn-default">Edit Issue</button>
            </div>  

        </form>
    </div>
</div>

