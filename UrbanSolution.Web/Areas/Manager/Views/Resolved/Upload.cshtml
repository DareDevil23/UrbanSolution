@model ResolvedIssueUploadModel
@{
    ViewData["Title"] = "Upload";
}

<div row class="text-info">
    <h3 class="text-center">@this.ViewData["Title"]</h3>
    <hr />
</div>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form asp-action="Upload" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input asp-for="PictureFile" class="form-control" />

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" rows="8" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Upload" class="btn btn-default" />
                <a asp-area="Manager" asp-controller="Issue" asp-action="Index" class="btn btn-default">Back</a>
            </div>
            <input type="hidden" name="UrbanIssueId" value="@(ViewData[ViewDataIssueId])" />
        </form>
    </div>
</div>

@section Scripts {

    <partial name="_ValidationScriptsPartial" />
}